        // Linux style tab switching
        {
            "command": 
            {
                "action": "nextTab"
            },
            "keys": "ctrl+pgdn"
        },
        {
            "command": 
            {
                "action": "prevTab"
            },
            "keys": "ctrl+pgup"
        },
        // Move tab backward (left in LTR)
        {
            "command": 
            {
                "action": "moveTab",
                "direction": "backward"
            },
            "keys": "ctrl+shift+pgup"
        },
        // Move tab backward (left in LTR)
        {
            "command": 
            {
                "action": "moveTab",
                "direction": "forward"
            },
            "keys": "ctrl+shift+pgdn"
        },
        // Change default keys for scrolling
        {
            "command": "scrollUpPage",
            "keys": "shift+pgup"
        },
        {
            "command": "scrollDownPage",
            "keys": "shift+pgdn"
        },
        // Switch color theme
        {
            "command": { "action": "setColorScheme", "colorScheme": "Modus Operandi" },
            "keys": "ctrl+f5"
        },
        {
            "command": { "action": "setColorScheme", "colorScheme": "Modus Vivendi" },
            "keys": "alt+f5"
        }
    ],
    // Don't prompt on exit
    "closeOnExit": "always",
    // Automatically copy selections to clipboard
    "copyOnSelect": true,
    // Default profile
    "defaultProfile": "Ubuntu 24.04 LTS",
    // Default window size
    "initialCols": 180,
    "initialRows": 50,
    "profiles": 
    {
        "defaults": 
        {
            "bellStyle": 
            [
                "window",
                "taskbar"
            ],
            "colorScheme":
            {
                 "dark": "Modus Vivendi",
                 "light": "Modus Operandi"
                 // "dark": "Tango Dark",
                 // "light": "Tango Light"
                 // "dark": "One Half Dark",
                 // "light": "One Half Light"
            },
            // "colorScheme": "Vintage",
            "cursorShape": "filledBox",
            "font":
            {
                "face": "Cascadia Code",
                "size": 11
            }
        },
        "list": 
        [
            {
                // Powershell
                "commandline": "%SystemRoot%\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
                "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
                "hidden": false,
                "name": "Windows PowerShell"
            },
            {
                // Console
                "commandline": "%SystemRoot%\\System32\\cmd.exe",
                "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
                "hidden": false,
                "name": "Command Prompt"
            },
            {
                // Azure Cloud
                "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
                "hidden": false,
                "name": "Azure Cloud Shell",
                "source": "Windows.Terminal.Azure"
            },
            {
                // Legacy
                "commandline": "wsl.exe ~",
                "name": "Legacy",
                // "startingDirectory": "\\\\wsl$\\Ubuntu\\home\\andreas"
            },
            {
                // Ubuntu
                "commandline": "wsl.exe -d Ubuntu --cd ~",
                "icon": "https://assets.ubuntu.com/v1/49a1a858-favicon-32x32.png",
                "name": "Ubuntu",
                "startingDirectory": "%USERPROFILE%",
                // "colorScheme": "Modus Operandi"
            },
            {
                // Ubuntu 20.04 LTS
                "commandline": "wsl.exe -d Ubuntu-20.04 --cd ~",
                "icon": "https://assets.ubuntu.com/v1/49a1a858-favicon-32x32.png",
                "name": "Ubuntu 20.04 LTS",
                "startingDirectory": "%USERPROFILE%",
                // "colorScheme": "Modus Operandi"
            },
            {
                // Ubuntu 22.04 LTS
                "commandline": "wsl.exe -d Ubuntu-22.04 --cd ~",
                "icon": "https://assets.ubuntu.com/v1/49a1a858-favicon-32x32.png",
                "name": "Ubuntu 22.04 LTS",
                "startingDirectory": "%USERPROFILE%",
                // "colorScheme": "Modus Operandi"
            },
            {
                // Ubuntu 24.04 LTS
                "commandline": "wsl.exe -d Ubuntu-24.04 --cd ~",
                "icon": "https://assets.ubuntu.com/v1/49a1a858-favicon-32x32.png",
                "name": "Ubuntu 24.04 LTS",
                "startingDirectory": "%USERPROFILE%"
            }
        ]
    },
